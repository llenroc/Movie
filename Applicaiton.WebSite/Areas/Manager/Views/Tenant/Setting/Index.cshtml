<div ng-controller="app.manager.tenant.setting.index as vm">
	<div class="view-page-head">
		<h1 class="view-page-title">
			<span>@L("Settings")</span> <small>@L("SettingsHeaderInfo")</small>
		</h1>
	</div>
	<div class="tab" data-ride="tab">
		<ul class="tab-nav-list">
			<li class="actived">
				<a>@L("Shop")</a>
			</li>
			<li>
				<a>@L("Spread")</a>
			</li>
		</ul>
		<div class="tab-box">
			<div class="tab-page show">
                <div class="form-group">
                    <label class="form-group-key">@L("Name")</label>
                    <div class="form-group-block">
                        <div class="input-wrapper">
                            <input type="text" ng-model="vm.settings.shop.name">
                        </div>
                    </div>
                </div>
				<div class="form-group">
					<label class="form-group-key">@L("Logo")</label>
					<div class="form-group-block">
						<div class="picture-uploader"
							 picture-uploader
							 path="vm.settings.shop.logo"
							 data-option-url="/Manager/Home/Upload"
							 data-option-default-image="/Content/WebFrame/image/upload-picture.png">
							<img width="96" ng-src="{{vm.settings.shop.logo}}" />
							<input type="file" />
							<input type="hidden" required ng-model="vm.settings.shop.logo" />
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="form-group-key">@L("ShareTitle")</label>
					<div class="form-group-block">
						<div class="input-wrapper">
							<input type="text" ng-model="vm.settings.shop.shareTitle">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="form-group-key">@L("ShareDescription")</label>
					<div class="form-group-block">
						<div class="input-wrapper">
							<input type="text" ng-model="vm.settings.shop.shareDescription">
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="form-group-key">@L("SharePicture")</label>
					<div class="form-group-block">
						<div class="picture-uploader"
							 picture-uploader
							 path="vm.settings.shop.sharePicture"
							 data-option-url="/Manager/Home/Upload"
							 data-option-default-image="/Content/WebFrame/image/upload-picture.png">
							<img width="96" ng-src="{{vm.settings.shop.sharePicture}}" />
							<input type="file" />
							<input type="hidden" required ng-model="vm.settings.shop.sharePicture" />
						</div>
					</div>
				</div>
                <div class="form-group">
                    <label class="form-group-key">@L("DecreaseStockWhen")</label>
                    <div class="form-group-block">
                        <div class="input-wrapper">
                            <select ng-model="vm.settings.shop.decreaseStockWhen" ng-options="x as y for (x, y) in vm.decreaseStockWhen"></select>
                        </div>
                    </div>
                </div>
				<div class="form-group">
					<label class="form-group-key">@L("ShouldHasParentForBuy")</label>
					<div class="form-group-block">
						<div class="checkbox-switcher">
							<input type="checkbox" ng-model="vm.settings.shop.shouldHasParentForBuy">
							<label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
						</div>
					</div>
				</div>
				<div class="form-group">
					<label class="form-group-key">@L("DistributionWhen")</label>
					<div class="form-group-block">
						<div class="input-wrapper">
                            <select ng-model="vm.settings.shop.distributionWhen" ng-options="x as y for (x, y) in vm.distributionWhenEnum">

                            </select>
						</div>
					</div>
				</div>
			</div>
			<div class="tab-page hide">
                <div class="form-group">
                    <label class="form-group-key">@L("UpgradeOrderMoney")</label>
                    <div class="form-group-block">
                        <div class="input-wrapper">
                            <input type="text" ng-model="vm.settings.spread.upgradeOrderMoney">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-group-key">@L("MustBeSpreaderForSpread")</label>
                    <div class="form-group-block">
                        <div class="checkbox-switcher">
                            <input type="checkbox" ng-model="vm.settings.spread.mustBeSpreaderForSpread">
                            <label><span class="on">@L("On")</span><span class="off">@L("Off")</span></label>
                        </div>
                    </div>
                </div>
			</div>
		</div>
	</div>
	<button class="button-text block primary" ng-click="vm.saveAll()">@L("SaveAll")</button>
</div>